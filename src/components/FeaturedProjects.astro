---
import { getCollection } from "astro:content";

// Get projects and limit to 3 featured ones
const allProjects = await getCollection("projects");
const featuredProjects = allProjects.slice(0, 3);
---

<section class="featured-projects">
  <h2>Featured Projects</h2>
  <div class="projects-grid">
    {
      featuredProjects.map((project) => (
        <article class="project-card">
          <h3>
            <a href={`/projects/${project.id}`}>{project.data.projectName}</a>
          </h3>
          <div class="project-meta">
            <span class="year">{project.data.year}</span>
            <span class="category">{project.data.categories}</span>
          </div>
          <p class="description">{project.data.shortDescription}</p>
          <a href={`/projects/${project.id}`} class="read-more">
            View Project →
          </a>
        </article>
      ))
    }
  </div>
  <div class="view-all">
    <a href="/projects">View All Projects →</a>
  </div>
</section>

<style>
  .featured-projects {
    padding: 3rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-projects h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--accent);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    background: white;
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }

  .project-card h3 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .project-card h3 a {
    text-decoration: none;
    color: var(--accent);
    transition: color 0.3s ease;
  }

  .project-card h3 a:hover {
    color: var(--accent-dark);
  }

  .project-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .year,
  .category {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    font-weight: 600;
  }

  .year {
    background: var(--accent);
    color: white;
  }

  .category {
    background: var(--gray-light);
    color: var(--gray-dark);
  }

  .description {
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: var(--gray-dark);
  }

  .read-more {
    display: inline-block;
    background: var(--accent);
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .read-more:hover {
    background: var(--accent-dark);
  }

  .view-all {
    text-align: center;
  }

  .view-all a {
    background: transparent;
    color: var(--accent);
    text-decoration: none;
    padding: 1rem 2rem;
    border: 2px solid var(--accent);
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .view-all a:hover {
    background: var(--accent);
    color: white;
  }

  @media (max-width: 768px) {
    .featured-projects {
      padding: 2rem 1rem;
    }

    .featured-projects h2 {
      font-size: 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
